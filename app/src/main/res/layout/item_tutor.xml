<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/light_grey"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/md_keylines">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_title"
            android:layout_marginLeft="75dp"
            android:text="Name:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_email"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="@string/item_title" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_email"
            android:layout_marginLeft="75dp"
            android:text="Email:  "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_title"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:ellipsize="end"
            android:singleLine="false"
            android:textColor="@android:color/background_dark"
            android:textSize="12dp"
            tools:text="@string/item_desc" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_phone"
            android:layout_marginLeft="75dp"
            android:text="Phone:  "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_email"
            android:layout_marginLeft="13dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:ellipsize="end"
            android:singleLine="false"
            android:textColor="@android:color/background_dark"
            android:textSize="12dp"
            tools:text="@string/item_desc" />

        <TextView
            android:id="@+id/lblSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_skills"
            android:layout_marginLeft="75dp"
            android:text="Skills:    "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_phone"
            android:layout_marginLeft="13dp"
            android:layout_toEndOf="@+id/lblSkills"
            android:layout_toRightOf="@+id/lblSkills"
            android:ellipsize="end"
            android:singleLine="false"
            android:textColor="@android:color/background_dark"
            android:textSize="12dp"
            android:inputType="textMultiLine"
            android:scrollbars = "vertical"
            tools:text="@string/item_desc" />

        <TextView
            android:id="@+id/lblSchedules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="75dp"
            android:layout_alignTop="@+id/list_schedule"
            android:text="Schedule: "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_skills"
            android:layout_toEndOf="@+id/lblSchedules"
            android:layout_toRightOf="@+id/lblSchedules"
            android:ellipsize="end"
            android:singleLine="false"
            android:textColor="@android:color/background_dark"
            android:textSize="12dp"
            android:inputType="textMultiLine"
            android:scrollbars = "vertical"
            tools:text="@string/item_desc" />

        <ImageView
            android:id="@+id/imgPicRecycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            card_view:srcCompat="@android:drawable/sym_def_app_icon"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>