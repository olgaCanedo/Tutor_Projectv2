<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/light_grey"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/md_keylines">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_title"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:text="Name:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_email"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_email"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/article_subheading"
            android:textStyle="bold"
            tools:text="@string/item_title" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_email"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:text="Email:  "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_title"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:ellipsize="end"
            android:singleLine="false"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/list_body"
            tools:text="@string/item_desc" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list_phone"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:text="Phone:  "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_email"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:ellipsize="end"
            android:singleLine="false"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/list_body"
            tools:text="@string/item_desc" />
    </RelativeLayout>


</android.support.v7.widget.CardView>